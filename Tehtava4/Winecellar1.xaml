<Window x:Class="Tehtava4.Winecellar1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava4"
        mc:Ignorable="d"
        Title="Winecellar1" Height="500" Width="400">
    <Grid>
        <Grid.Resources>
            <XmlDataProvider x:Key="winedata"
                             Source="Viinit1.xml"
                             XPath="viinikellari/wine">
            </XmlDataProvider>
        </Grid.Resources>
        <DataGrid x:Name="dgWines" DataContext="{StaticResource winedata}"
                  ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="0,37,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Viini" Binding="{Binding XPath=nimi}"/>
                <DataGridTextColumn Header="Maa" Binding="{Binding XPath=maa}"/>
                <DataGridTextColumn Header="Arvio" Binding="{Binding XPath=arvio}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="cmbCountry" DataContext="{StaticResource winedata}"
                  ItemsSource="{Binding}" DisplayMemberPath="maa" HorizontalAlignment="Left"
                  Margin="196,10,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
