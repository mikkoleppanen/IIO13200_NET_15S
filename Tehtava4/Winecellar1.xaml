<Window x:Class="Tehtava4.Winecellar1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava4"
        mc:Ignorable="d"
        Title="Winecellar1" Height="500" Width="400">
    <Grid>
        <DataGrid x:Name="dgWines" ItemsSource="{Binding Path=Elements[wine]}"
                  AutoGenerateColumns="False" Margin="0,37,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Viini" Binding="{Binding Path=Element[nimi].Value}"/>
                <DataGridTextColumn Header="Maa" Binding="{Binding Path=Element[maa].Value}"/>
                <DataGridTextColumn Header="Arvio" Binding="{Binding Path=Element[arvio].Value}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="cmbCountry" HorizontalAlignment="Left"
                  Margin="196,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSort" Content="Hae viinit" HorizontalAlignment="Left" Height="22" Margin="36,10,0,0" VerticalAlignment="Top" Width="122" Click="btnSort_Click"/>

    </Grid>
</Window>
