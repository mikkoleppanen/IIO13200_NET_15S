<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnGet" Content="Hae lähtevät junat" HorizontalAlignment="Left" Margin="174,10,0,0" VerticalAlignment="Top" Width="114" Click="btnGet_Click"/>
        <ComboBox x:Name="cbCity" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="159"/>
        <DataGrid x:Name="dgTrains" ItemsSource="{Binding}" Margin="10,65,10,10">
        </DataGrid>
        <TextBox x:Name="txtUrl"  HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
    </Grid>
</Window>
